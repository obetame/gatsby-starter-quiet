{
	"name": "gatsby-starter-quiet",
	"description": "开箱即用的Gastby脚手架,支持系统级主题切换、MarkDown草稿、TypeScript、自定义主题",
	"version": "0.2.0",
	"author": "zhouyuexie",
	"dependencies": {
		"github-api": "^3.2.2",
		"katex": "^0.10.2",
		"prismjs": "^1.16.0",
		"prop-types": "^15.7.2",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-helmet": "^5.2.1",
		"react-paginate": "^6.3.0",
		"rehype-react": "^3.1.0",
		"styled-components": "^4.2.0",
		"tslint": "^5.17.0",
		"tslint-react": "^4.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.4.0",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-object-rest-spread": "^7.4.0",
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"@babel/preset-env": "^7.4.1",
		"@babel/preset-typescript": "^7.3.2",
		"@commitlint/cli": "^8.0.0",
		"@commitlint/config-conventional": "^8.0.0",
		"@types/node": "^12.0.4",
		"@types/react": "^16.8.19",
		"@types/react-dom": "^16.8.4",
		"@types/react-helmet": "^5.0.8",
		"@types/react-paginate": "^6.2.1",
		"@types/rehype-react": "^3.1.0",
		"@types/styled-components": "^4.1.15",
		"babel-plugin-styled-components": "^1.10.0",
		"gatsby": "^2.7.3",
		"gatsby-image": "^2.1.1",
		"gatsby-plugin-feed": "^2.3.0",
		"gatsby-plugin-google-analytics": "^2.0.21",
		"gatsby-plugin-manifest": "^2.1.1",
		"gatsby-plugin-nprogress": "^2.0.10",
		"gatsby-plugin-offline": "^2.1.1",
		"gatsby-plugin-page-progress": "^2.0.7",
		"gatsby-plugin-react-helmet": "^3.0.12",
		"gatsby-plugin-sass": "^2.0.11",
		"gatsby-plugin-sharp": "^2.1.1",
		"gatsby-plugin-sitemap": "^2.1.0",
		"gatsby-plugin-styled-components": "^3.0.7",
		"gatsby-plugin-typescript": "^2.0.15",
		"gatsby-remark-copy-linked-files": "^2.0.13",
		"gatsby-remark-graphviz": "^1.0.11",
		"gatsby-remark-images": "^3.0.14",
		"gatsby-remark-katex": "^3.0.4",
		"gatsby-remark-prismjs": "^3.2.9",
		"gatsby-source-filesystem": "^2.0.37",
		"gatsby-transformer-remark": "^2.3.12",
		"gatsby-transformer-sharp": "^2.1.19",
		"gatsby-transformer-yaml": "^2.1.12",
		"husky": "^2.3.0",
		"lint-staged": "^8.1.7",
		"node-sass": "^4.12.0",
		"prettier": "^1.17.1",
		"typescript": "^3.3.3"
	},
	"scripts": {
		"build": "gatsby build",
		"dev": "gatsby develop",
		"format": "prettier --write src/**/*.{tsx,jsx,js}",
		"serve": "gatsby serve",
		"local": "yarn build && yarn serve",
		"deploy": "./deploy.sh",
		"test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm test",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"linters": {
			"*.{tsx,js,jsx}": [
				"prettier --write",
				"git add"
			],
			"*.{md,json}": [
				"prettier --write",
				"git add"
			]
		},
		"ignore": [
			"**/public/**/*.js",
			"**/node_modules/**/*.js"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/zhouyuexie/site"
	}
}
